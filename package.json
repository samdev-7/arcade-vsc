{
  "name": "arcade-vsc",
  "displayName": "Arcade VSC",
  "description": "Visual Studio Code integration for Hack Club Arcade",
  "version": "0.6.0",
  "engines": {
    "vscode": "^1.90.0"
  },
  "author": "Sam Liu <hello@samliu.dev> (https://samliu.dev)",
  "repository": {
    "repository": "github:samdev-7/arcade-vsc"
  },
  "license": "MIT",
  "publisher": "samdev",
  "categories": [
    "Other"
  ],
  "icon": "media/icon.png",
  "keywords": [
    "arcade",
    "timer",
    "hackclub"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "arcade-vsc.init",
        "category": "Arcade",
        "title": "Init"
      },
      {
        "command": "arcade-vsc.clear",
        "category": "Arcade",
        "title": "Clear Saved Data"
      },
      {
        "command": "arcade-vsc.refresh",
        "category": "Arcade",
        "title": "Force Refresh"
      }
    ],
    "configuration": {
      "title": "Arcade VSC",
      "properties": {
        "arcade-vsc.slackID": {
          "type": "string",
          "default": "",
          "description": "Your Hack Club Slack ID. Get it from #what-is-my-slack-id"
        },
        "arcade-vsc.notifications.sessionNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show status notifications regarding your session. (e.g. when your session ends)"
        },
        "arcade-vsc.notifications.startReminder": {
          "type": "boolean",
          "default": true,
          "description": "Remind you to start a session if you're coding without an active session."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "arcade",
          "title": "Hack Club Arcade",
          "icon": "media/sidebar.svg"
        }
      ]
    },
    "views": {
      "arcade": [
        {
          "type": "webview",
          "id": "arcade.session",
          "name": "Arcade Session"
        }
      ]
    }
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.11",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "axios": "^1.7.2"
  }
}
