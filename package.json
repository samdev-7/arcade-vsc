{
  "name": "arcade-vsc",
  "displayName": "Arcade VSC",
  "description": "Visual Studio Code Integration with Hack Club Arcade",
  "version": "0.5.2",
  "engines": {
    "vscode": "^1.90.0"
  },
  "author": "Sam Liu <hello@samliu.dev> (https://samliu.dev)",
  "repository": {
    "repository": "github:samdev-7/arcade-vsc"
  },
  "license": "MIT",
  "publisher": "samdev",
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "keywords": [
    "arcade",
    "timer",
    "hack club",
    "hackclub"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "arcade-vsc.init",
        "category": "Arcade",
        "title": "Init"
      },
      {
        "command": "arcade-vsc.clear",
        "category": "Arcade",
        "title": "Clear Saved Data"
      },
      {
        "command": "arcade-vsc.refresh",
        "category": "Arcade",
        "title": "Force Refresh"
      }
    ],
    "configuration": {
      "title": "Arcade VSC",
      "properties": {
        "arcade-vsc.slackID": {
          "type": "string",
          "default": "",
          "description": "Your Hack Club Slack ID. Get it from #what-is-my-slack-id"
        },
        "arcade-vsc.notifications.sessionNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show status notifications regarding your session. (e.g. when your session ends)"
        },
        "arcade-vsc.notifications.startReminder": {
          "type": "boolean",
          "default": true,
          "description": "Remind you to start a session if you're coding without an active session."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.11",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "axios": "^1.7.2"
  }
}
